@{
    ViewData["Title"] = "Home Page";
}

@model List<Land>

<h2>Farms</h2>

<div class="row">
    @foreach (var farm in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@farm.Name</h5>
                    <p class="card-text">Size: @farm.Size hectares</p>
                    <a href="@Url.Action("GetFarmDetails", new { farmId = farm.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

