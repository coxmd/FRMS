@{
    ViewData["Title"] = "Home Page";
}

@model List<Farms>

<partial name="_Notification" />



@if (Model != null)
{
<h2>Farms</h2>

    <div class="card-container d-flex flex-wrap">
        @foreach (var farm in Model)
        {
            <div class="card mt-4 mx-2" style="width: 25rem;">
                <div class="card-body">
                    <h5 class="card-title fs-3">@farm.Name</h5>
                    <p class="card-text fs-3">Size: @farm.Size hectares</p>
                    <a href="@Url.Action("GetFarmDetails", "Farm", new { farmId = farm.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <h1>No Farms Added </h1>
    <a asp-controller="Farm" asp-action="Create" class="btn btn-primary mt-1 mb-2">Add a Farm</a>
}

