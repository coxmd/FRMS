@model Crops
@{
    Layout = "_Layout";
}
<partial name="_Notification" />

<h2 class="mt-5">Add A Crop</h2>

<form asp-action="AddCrops" method="post">
    <div class="form-group">
        <div class="col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="Variety"></label>
            <input asp-for="Variety" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="FarmId"></label>
            <input asp-for="FarmId" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="PlantingDate"></label>
            <input asp-for="PlantingDate" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="ExpectedHarvestDate"></label>
            <input asp-for="ExpectedHarvestDate" class="form-control" />
        </div>


        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Add</button>
            <a class="btn btn-danger mt-1 mb-2" onclick="window.history.back()">Back</a>
        </div>
    </div>
</form>
