@model Tasks
@{
    Layout = "_Layout";
}
<partial name="_Notification" />

<h2 class="mt-2">Add A Task</h2>

<form asp-action="AddTasks" method="post">
    <div class="form-group">
        <div class="col-4">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="AssignedTo"></label>
            <input asp-for="AssignedTo" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="Status"></label>
            <input asp-for="Status" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="FarmId"></label>
            <input asp-for="FarmId" class="form-control" />
        </div>


        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Add</button>
            <a asp-action="GetFarmDetails" class="btn btn-danger mx-1">Back</a>
        </div>
    </div>
</form>
