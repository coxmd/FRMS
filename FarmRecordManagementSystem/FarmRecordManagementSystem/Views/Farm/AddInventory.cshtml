@model Inventory
@{
    Layout = "_Layout";
}
<partial name="_Notification" />

<h2 class="mt-5">Add Inventory Items</h2>

<form asp-action="AddInventory" method="post">
    <input type="hidden" asp-for="FarmId" />
    <div class="form-group">
        <div class="col-4">
            <label asp-for="CropName"></label>
            <input asp-for="CropName" class="form-control" required />
        </div>

        <div class="col-4">
            <label asp-for="StorageLocation"></label>
            <select asp-for="StorageLocation" class="form-select" required>
                <option value="">-- Select Storage Location --</option>
                @if (ViewBag.Locations != null && ViewBag.Locations.Count > 0)
                {
                    foreach (var location in ViewBag.Locations)
                    {
                        <option value="@location.Id" class="text-dark">
                            @location.Name
                        </option>
                    }
                }
                else
                {
                    <option value="" disabled>No storage locations available. Add a storage location first.</option>
                }
            </select>
        </div>

        <div class="col-4">
            <label asp-for="QuantityHarvested"></label>
            <input asp-for="QuantityHarvested" class="form-control" required />
        </div>

        <div class="col-4">
            <label asp-for="PriceSold"></label>
            <input asp-for="PriceSold" class="form-control" />
        </div>

        <div class="col-4">
            <label asp-for="TotalSold"></label>
            <input asp-for="TotalSold" class="form-control" />
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Add</button>
            <a class="btn btn-danger mt-1 mb-2" onclick="window.history.back()">Back</a>
        </div>
    </div>
</form>
